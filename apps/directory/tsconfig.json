{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "typescript-config/nextjs.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./src",
    "plugins": [
      {
        "name": "next",
      },
    ],
    "verbatimModuleSyntax": true,
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.js",
    "*.mjs",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules", ".next"],
}
